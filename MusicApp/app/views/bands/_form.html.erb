<% if @band.name %>
  <% action_url = band_url(@band) %>
  <% else %>
  <% action_url = bands_url %>
  <% end %>
<form action="<%= action_url %>" method="post">
  <% if @band.name %>
    <input type="hidden" name="_method" value="Patch">
  <% end %>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="band_name">Band Name</label>
  <input type="text" name="band[name]" value="<%= @band.name %>" id="band_name">

  <input type="submit" value="<%= @band.name.nil? ? 'Create' : 'Update' %>">
</form>
